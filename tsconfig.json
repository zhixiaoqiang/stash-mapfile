{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "outDir": "./lib",
    "declaration": true,
    "lib": [
      "esnext",
      "DOM",
    ],
    "skipLibCheck": true,
    "types": ["node"],
    
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}